<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_detail_graph"
    app:startDestination="@id/detailUserFragment">

    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.m.ginwa.dicoding.mygithubre.ui.detail.DetailUserFragment"
        android:label="{username}"
        tools:layout="@layout/fragment_detail_user">
        <action
            android:id="@+id/action_detailUserFragment_self"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/followersFragment"
        android:name="com.m.ginwa.dicoding.mygithubre.ui.detail.followers.FollowersFragment"
        android:label="fragment_followers"
        tools:layout="@layout/fragment_followers" />
    <fragment
        android:id="@+id/followingFragment"
        android:name="com.m.ginwa.dicoding.mygithubre.ui.detail.following.FollowingFragment"
        android:label="FollowingFragment" />
    <fragment
        android:id="@+id/bioFragment"
        android:name="com.m.ginwa.dicoding.mygithubre.ui.detail.BioFragment"
        android:label="fragment_bio"
        tools:layout="@layout/fragment_bio" />
</navigation>